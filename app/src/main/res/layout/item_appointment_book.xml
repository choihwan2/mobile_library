<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/normal_padding">

    <TextView
        android:id="@+id/appointment_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Text.MyPageTitle"/>

    <TextView
        android:id="@+id/appointment_book_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_book_title"
        style="@style/Text.MyPageIndex"/>

    <TextView
        android:id="@+id/appointment_book_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/appointment_book_date"
        app:layout_constraintTop_toBottomOf="@+id/appointment_book_title"
        android:layout_marginStart="@dimen/normal_margin"
        style="@style/Text.MyPageIndex" />

    <Button
        android:id="@+id/appointment_book_cancel"
        android:text="취소"
        android:textSize="@dimen/large_font_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/login_button_color"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>