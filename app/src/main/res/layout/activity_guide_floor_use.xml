<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_pink"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.AllGuideTitle"
            android:text="시설 이용안내"
            android:layout_marginTop="20dp"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            style="@style/Bar.AllGuide"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/radiuslayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/Text.FloorUseGuideFloor"
                android:text="9F"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.GuideExplainText"
                android:text="제 3자료실 (09:00 ~ 22:00)"
                />


        </LinearLayout>


        <View
            android:layout_width="@dimen/barWidth"
            android:layout_height="2dp"
            style="@style/Bar.AllGuide"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/Text.FloorUseGuideFloor"
                android:text="8F"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.GuideExplainText"
                android:text="자유 열람실/학술전산처장실 (09:00~22:00)"
                />


        </LinearLayout>


        <View
            android:layout_width="@dimen/barWidth"
            android:layout_height="2dp"
            style="@style/Bar.AllGuide"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
