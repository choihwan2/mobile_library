<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f1f1"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="i-Pad 대여 안내"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />

                <View
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@color/hintColor"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/radiuslayout"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="1. 대상"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="학부 재학생 및 교강사"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />


                </LinearLayout>


                <View
                    android:layout_width="@dimen/barWidth"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/hintColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="2. 대여"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="New iPad, WiFi / 32GB"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />


                </LinearLayout>


                <View
                    android:layout_width="@dimen/barWidth"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/hintColor" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="3. 기간"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:singleLine="false"
                        android:text="- 학생 : 대여일로부터 1개월
    - 교강사 : 학기 단위"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />


                </LinearLayout>


                <View
                    android:layout_width="@dimen/barWidth"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/hintColor" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="4. 방법"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 학생증/신분증 지참 → 학술정보원 2층 AV실 방문 → 비치된 iPAD 대여신청서를 작성"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 대여된 iPAD는 교육용만으로 사용하시기 바랍니다."
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 대여된 iPAD에 보안설정시 반드시 메모하여 장치 초기화가 될 수 있도록 하여 주시기 바랍니다. (반납시 비밀번호 재설정을 위해 설정된 비밀번호 해제후 반납)"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 반납시 저장된 데이터는 모두 다른 저장매체에 복사 또는 삭제후 반납하시기 바랍니다."
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 반납예정일을 경과하여 반납한 경우는 1달 동안 대여가 중지됩니다."
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 대여된 iPAD가 사용부주의로 인한 파손/훼손시는 고장수리비가 청구될 수 있습니다."
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="- 대여된 iPAD 분실시 해당 장치와 동일한 제품 또는 해당 제품 구입가로 변상하여야 합니다."
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/guideTextSize" />
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="@dimen/barWidth"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/hintColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="5. 조치"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="반납된 iPAD는 개인정보가 남아 있거나 악성코드가 설치될 수 있으므로 반드시 장치 초기화를 수행한후 대여 하여야 한다.
    "
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/guideTextSize" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
