<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Text Style-->
    <style name="Text">

    </style>

    <style name="Text.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.reading_room">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.reading_room_progress_now">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.reading_room_progress_max">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Image Style-->
    <style name="Image">

    </style>

    <style name="Image.Main">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Image.ChatBot">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@mipmap/ic_launcher_round</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!--Button Style-->
    <style name="Button">

    </style>

    <style name="Button.reading_room_back">
        <item name="android:background">@color/btnPink</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Button.reading_room_see_seat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/btnPink</item>
    </style>

</resources>
