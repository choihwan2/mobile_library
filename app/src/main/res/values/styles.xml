<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Login_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Text Style-->
    <style name="Text">

    </style>

    <style name="Text.Menu">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.reading_room">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.reading_room_progress_now">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.reading_room_progress_max">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.SearchBookItemTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.SearchBookItemRest">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Text.SearchBookSpinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Text.SearchBookDetailCategory">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="Text.SearchBookDetailContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">2</item>
    </style>


    <style name="Text.StudyRoomTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.StudyRoomRVTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.AllGuideTitle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Text.BookBorrowGuideIndex">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BookBorrowGuideExplain">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.FloorUseGuideFloor">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/guideTextSize</item>
    </style>

    <style name="Text.GuideExplainText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/guideTextSize</item>
    </style>

    <style name="Text.IpadBorrowGuideIndex">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/guideTextSize</item>
    </style>

    <style name="Text.LoginEditTxt">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="Text.chat_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="Text.chatbot_payload">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_primary</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/chat_payload_button_text</item>
    </style>


    <!--Image Style-->
    <style name="Image">

    </style>

    <style name="Image.Main">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Image.ChatBot">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Image.BookImage">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Image.CameraIcon">
        <item name ="android:layout_width">80dp</item>
        <item name ="android:layout_height">80dp</item>
        <item name ="android:layout_marginTop">32dp</item>
    </style>

    <style name="Image.SearchBook">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Image.GuideTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Image.DetailBook">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>


    <!--Button Style-->
    <style name="Button">

    </style>

    <style name="Button.SearchBook">
        <item name="android:background">@color/btnPink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Button.reading_room_back">
        <item name="android:background">@color/btnPink</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">@string/reading_room_back</item>
    </style>

    <style name="Button.ReadingRoomSeeSeat">
        <item name="android:text">@string/reading_room_see_seat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/btnPink</item>
    </style>

    <style name="Button.reading_room_see_seat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/btnPink</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">@string/search_book_search</item>
    </style>

    <style name="Button.StudyRoom">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Button.send">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/ic_send_black_24dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <!--Bar Style-->
    <style name="Bar">

    </style>


    <style name="Bar.StudyRoom">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/hintColor</item>
    </style>

    <style name="Bar.AllGuide">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/hintColor</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--EditText-->
    <style name="EditText">

    </style>

    <style name="EditText.chat_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/chat_edittext</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">@integer/chat_edittext_ems</item>
        <item name="android:imeOptions">actionSend</item>
    </style>

    <!--Spinner Style-->
    <style name="Spinner">

    </style>

    <style name="Spinner.SearchBook">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
